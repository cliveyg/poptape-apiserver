{     
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "URLs schema",
  "type": "array",
  "uniqueItems": true,
  "minItems": 1,
  "items": { "$ref": "#/definitions/url_def" },
  "definitions": {
    "url_def": {
      "type": "object",
      "properties": {
        "url": {"type": "string"},
        "fields": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "object",
	   	    "patternProperties": {
			".*": {"type": "string"},
			".*": {"type": "string"}
		    }
	  }
        }
      },
      "required": ["url", "fields"]
    }
  }
}

